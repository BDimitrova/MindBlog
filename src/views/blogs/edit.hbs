<main>
    <section id="edit-container">
        <div class="edit-container-info">
            <h1>Edit Blog</h1>
            <form action="/blog/{{_id}}/edit" method="POST">
                <label>Title:</label>
                <input name="title" type="text" id="name" value="{{title}}">

                <label>Image:</label>
                <input name="image" type="text" id="image"
                    value="{{image}}">

                <label>Content:</label>
                <textarea id="content"
                    name="content">{{content}}</textarea>

                <label>Blog Category:</label>
                <input name="category" type="text" id="catelory" value="{{category}}">

                <input type="submit" id="btn" value="EDIT"></input>
            </form>
        </div>
    </section>
</main>