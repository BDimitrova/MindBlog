<main>
    <section id="create-container">
        <div class="create-container-info">
            <h1>Create Blog</h1>
            <form action="/blog/create-blog" method="POST">
                <label>Title:</label>
                <input name="title" type="text" id="name">

                <label>Image:</label>
                <input name="image" type="text" id="image" placeholder="http://...">

                <label>Content:</label>
                <textarea id="content" name="content"></textarea>

                <label>Blog Category:</label>
                <input name="category" type="text" id="catelory">

                <input type="submit" id="btn" value="POST"></input>
            </form>
        </div>
    </section>
</main>