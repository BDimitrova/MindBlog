<main>
    <div class="details-container">
        <div class="details-container-image">
            <img src="{{image}}">
        </div>
        <div class="details-container-info">
            <h2>{{title}}</h2>
            <h3>{{category}}</h3>
                <h3>By: {{blogOwner.email}}</h3>
                {{#if followersCount}}
                    <h4>Follow By: {{followersCount}}</h4>
                {{else}}
                    <h4>There are no followers yet!</h4>
                {{/if}}
        </div>
        <div class="details-container-content">
            <p>{{content}}</p>
        </div>
        <div class="btn-container">
            {{#if isOwner}}
                <a href="/blog/{{_id}}/edit">Edit</a>
                <a href="/blog/{{_id}}/delete">Delete</a>
            {{else if user}}
                {{#if isFollowed}}
                    <!-- logged in user who has already wished the book-->
                    <p class="follow-pub">You already follow this blog!</p>
                {{else}}
                    <!-- logged in user who has not yet wished the book-->
                    <a href="/blog/{{_id}}/follow">Follow</a>
                {{/if}}
            {{/if}}
        </div>
    </div>
</main>